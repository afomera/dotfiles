# windows habbits die hard
alias cls=clear

# Git
alias gs="git status"
alias ga="git add"
alias ga.="git add ."
alias gc="git commit"

# Ruby / Rails Helpers
alias fs="foreman start -f Procfile.dev"
alias b="bundle"
alias bi="bundle install"
alias bu="bundle update"
alias be="bundle exec"
alias dropdb="rails db:drop db:create db:migrate"
