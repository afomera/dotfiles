[color]
    ui = true

[core]
    editor = nvim
    excludesfile = ~/.config/git/ignore
    pager = delta

[commit]
    template = ~/.config/git/commit_template

[delta]
    dark = true
    line-numbers = true
    navigate = true
    syntax-theme = ansi
    minus-style = syntax "#3c1f1e"
    minus-emph-style = syntax "#6e3630"
    plus-style = syntax "#1a3024"
    plus-emph-style = syntax "#2a6f3f"
    line-numbers-minus-style = "#ff7b72"
    line-numbers-plus-style = "#7ee787"
    line-numbers-zero-style = "#8b949e"
    hunk-header-style = syntax bold
    hunk-header-decoration-style = "#30363d" box

[alias]
    please = push --force-with-lease

[gtr "editor"]
    default = vscode

[gtr "ai"]
    default = claude

[init]
    defaultBranch = main

[interactive]
    diffFilter = delta --color-only

[merge]
    conflictstyle = zdiff3

[pager]
    branch = false
    tag = false

[pull]
    rebase = false

[push]
    autoSetupRemote = true

[rebase]
    autosquash = true

[user]
    name = {{ .fullName }}
    email = {{ .email }}

{{ if ne .work_org "none" -}}
[url "git@work-github:{{ .work_org }}/"]
    insteadOf = work:
{{ end -}}
